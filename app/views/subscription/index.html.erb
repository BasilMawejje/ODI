<!-- Contact Section Start -->
  <section id="contact" class="section">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-md-9">
          <div class="contact-block">
            <div class="section-header">
              <h2 class="section-title wow fadeIn" data-wow-duration="1000ms" data-wow-delay="0.3s">Create a <span>Plan</span></h2>
            </div>
            <%= form_tag('/subscription',{method: :post}) do %>
              <div class="col-sm-8">
                <div class="form-group">
                  <label>Plan name</label>
                  <input name="name" type="text"></input>
                </div>
                <div class="form-group">
                  <label>Plan interval</label>
                  <%= select_tag 'interval', options_for_select(['month', 'year']), multiple: false, :include_blank => true %>
                </div>
                <div class="form-group">
                  <label>Plan Value</label>
                  <input name="amount" type="text"></input>
                </div>
                <%= button_tag(type: 'submit', class: "btn btn-primary", style: "width: 75%;") do %>
                  Create a plan
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
<!-- Contact Section End -->
