<div id="pricing" class="section pricing-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title wow fadeIn" data-wow-duration="1000ms" data-wow-delay="0.3s">Frequently Asked <span>Questions</span></h2>
      <hr class="lines wow zoomIn" data-wow-delay="0.3s">
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div id="tabs">
          <ul class="tabs text-center">
            <li data-tabs="tab1" class="active">
              <span aria-hidden="true" class="icon-diamond"></span>General Questions</li>
          </ul>
          <div id="tab1" class="tabcontent accordion">
            <div class="accordion-title">
              <% @faq.in_groups_of(4, false).each do |group| %>
                <div class='row'>
                  <% group.each do |product| %>
                    <div class='col-xlg-12 col-lg-12 col-md-12 col-sm-12'>
                      <span><%= product.question %></span>
                        <div class="accordion-content">
                          <p><%= product.answer %></p>
                        </div>
                    </div>
                  <% end %>
                </div>
              <% end %><br><br>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

