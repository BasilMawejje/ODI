<h2>Our Work</h2>
<% @work.in_groups_of(4, false).each do |group| %>
  <div class='row'>
    <% group.each do |product| %>
      <div class='col-md-3' style="padding: 10px;">
        <div class="home">
          <%= link_to image_tag(product.image_url(:thumb).to_s, class: "work_img") %><br>
          <h4><%= product.title %></h4>
          <div><%= product.description %></div>
        </div>
      </div>
    <% end %>
  </div>
<% end %><br><br>
